root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
charset = utf-8
indent_style = tab
indent_size = 2

[*.py]
charset = utf-8
indent_style = tab
indent_size = 4

[*.rb]
tab_width = 2

[Makefile]
indent_style = tab
indent_size = 4

[{package.json,.travis.yml}]
indent_style = tab
indent_size = 2
